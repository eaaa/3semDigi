// Changed the CSS to POST-CSS with preprocessor (http://stylus-lang.com/)

.show img
    width 100%

.hide img
    width 100%

.show
    display block

.hide
    display none

#article_list
    clear both

button
    float right
    width 15%
    height 10%
    font-size 0.8cm
    margin-left 50px
    margin-top 10px

article
    width 210px
    height 320px
    margin 10px
    float left

.cover
    position relative
    width 100%
    height 50%
    top -140px
    background-color #113311


/* Changed styling for showing names so that the green box disappears completely */

.uncover
    display none

.cover:hover, .uncover:hover
    opacity: 0.3

h1
    float left
    font-size 1.8cm

@media only screen and (max-device-width: 400px)
    .cover
        opacity: 0
    .cover:hover, .uncover:hover
        opacity 1
